{% extends 'base.html.twig' %}

{% block title %}Liste des races{% endblock %}

{% block body %}
<div class="container pt-5">
    <h2>{{race.name}} #{{race.id}}</h2>

    <img src="{{race.imageUrl}}">
    <h3>Description rapide</h3>
    <p>{{race.quickDescription|nl2br}}</p>

    <h3>Description complete</h3>
    <p>{{race.fullDescription|nl2br}}</p>
    
    <a class="btn btn-primary mb-3" href="{{ path('app_admin_races_browser')}}">Retour Ã  la liste</a>
    <a class="btn btn-warning mb-3" href="{{ path('app_admin_races_edit', {"id": race.id}) }}">Modifier</a>
    {% if is_granted('ROLE_ADMIN') %}
        <form class="my-2" method="post" action="{{ path('app_admin_races_delete', {'id': race.id}) }}" onsubmit="return confirm('Voulez vous vraiment supprimer cette race ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ race.id) }}">
            <button class="btn btn-danger">Supprimer</button>
        </form>
    {% endif %}
    
</div>
{% endblock %}
