{% extends 'base.html.twig' %}

{% block title %}{{ user.firstName }}{% endblock %}

{% block body %}
    <h1>{{ user.firstName }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstName }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary mb-2" href="{{ path('app_admin_user_index') }}">Retour à la liste</a>

    <a class="btn btn-warning mb-2" href="{{ path('app_admin_user_edit', {'id': user.id}) }}">Modifier</a>
    <a class="btn btn-danger mb-2" href="{{ path('app_admin_user_edit_password', {'id': user.id}) }}">Changer mot de passe</a>

    {{ include('admin/user/_delete_form.html.twig') }}
{% endblock %}
