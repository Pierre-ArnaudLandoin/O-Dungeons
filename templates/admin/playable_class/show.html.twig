{% extends 'base.html.twig' %}

{% block title %}{{ playable_class.name }}{% endblock %}

{% block body %}
    <h1>{{ playable_class.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ playable_class.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ playable_class.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ playable_class.description }}</td>
            </tr>
            <tr>
                <th>Dés de vie</th>
                <td>{{ playable_class.lifeDice }}</td>
            </tr>
            <tr>
                <th>L'image</th>
                <td><img src="{{ asset(playable_class.imageUrl) }}"></td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_admin_playable_class_index') }}">Retour à la liste</a>

    <a class="btn btn-warning" href="{{ path('app_admin_playable_class_edit', {'id': playable_class.id}) }}">Modifier</a>

    {{ include('admin/playable_class/_delete_form.html.twig') }}
{% endblock %}
