{% if is_granted('ROLE_ADMIN') %}
<form method="post" action="{{ path('app_admin_item_delete', {'id': item.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cet objet ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
{% endif %}