{% extends 'base.html.twig' %}

{% block title %}Liste des objets{% endblock %}

{% block body %}
    <h1>Liste des objets</h1>

    <a class="btn btn-success" href="{{ path('app_admin_item_new') }}">Ajouter un objet</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Poids</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.id }}</td>
                <td>{{ item.name }}</td>
                <td>{{ item.weight }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_admin_item_show', {'id': item.id}) }}">Détails</a>
                    <a class="btn btn-warning" href="{{ path('app_admin_item_edit', {'id': item.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas d'objets trouvés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
