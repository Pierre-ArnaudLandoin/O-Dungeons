{% extends 'base.html.twig' %}

{% block title %}{{ weapon.name }}{% endblock %}

{% block body %}
    <h1>{{ weapon.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ weapon.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ weapon.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ weapon.type }}</td>
            </tr>
            <tr>
                <th>Dégâts de dés</th>
                <td>{{ weapon.damageDice }}</td>
            </tr>
            <tr>
                <th>Type de dégâts</th>
                <td>{{ weapon.damageType }}</td>
            </tr>
            <tr>
                <th>Poids</th>
                <td>{{ weapon.weight }}</td>
            </tr>
            <tr>
                <th>Propriétés</th>
                <td>{{ weapon.property }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary mb-3" href="{{ path('app_admin_weapon_browser') }}">Retour à la liste</a>

    <a class="btn btn-warning mb-3" href="{{ path('app_admin_weapon_edit', {'id': weapon.id}) }}">Modifier</a>

    {{ include('admin/weapon/_delete_form.html.twig') }}
{% endblock %}
